<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/twitterloginbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="35sp"
        android:text="@string/app_name"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:padding="35dp"
        android:text="@string/twitter_login_screen_text"
        android:textSize="16sp"
        android:textAlignment="center"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="@dimen/twitter_login_button_width"
        android:layout_height="@dimen/twitter_login_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"/>

    <Button android:id="@+id/cancel_login_button"
        android:layout_width="@dimen/twitter_login_button_width"
        android:layout_height="@dimen/twitter_login_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Cancel" />

</RelativeLayout>